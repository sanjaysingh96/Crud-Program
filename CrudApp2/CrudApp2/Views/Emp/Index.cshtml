@model CrudApp2.Models.EmpModel
@{
    ViewBag.Title = "AppEmp";
}

@if(ViewBag.id==null)
            {
                <h2>Add Employee</h2>
}
else
            {
                <h2>Edit Employee</h2>
            }

@using (Html.BeginForm("Index", "Emp",  FormMethod.Post))
{
    @Html.HiddenFor(m => m.id);
    <div class="form-group">
        <label>Name</label>
        @*<input type="text" class="form-control" placeholder="Enter name..">*@
        @Html.TextBoxFor(b => b.name, new { @class = "form-control", @required = "required" ,@placeholder = "Enter name.."})
    </div>
    <div class="form-group">
        <label>Email</label>
        @*<input type="email" class="form-control" placeholder="Enter email..">*@
        @Html.TextBoxFor(b => b.email, new { @class = "form-control", @required = "required" , @placeholder = "Enter email.." })
    </div>
    <div class="form-group">
        <label>City</label>
        @*<input type="text" class="form-control" placeholder="Enter city..">*@
        @Html.TextBoxFor(b => b.city, new { @class = "form-control", @required = "required", @placeholder = "Enter city.." })
    </div>
    <div class="form-group">
        <label>Salary</label>
        @*<input type="number" class="form-control" placeholder="Enter salary..">*@
        @Html.TextBoxFor(b => b.salary, new { @class = "form-control", @required = "required", @placeholder = "Enter salary.." })
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <button type="reset" class="btn btn-primary">Reset</button>
}

